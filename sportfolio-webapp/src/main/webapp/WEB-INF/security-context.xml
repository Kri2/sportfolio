http://www.springframework.org/schema/security
http://www.springframework.org/schema/security/spring-security-4.2.xsd">

<http auto-config="true" use-expressions="true">
  <form-login 
  login-page="/login" 
  default-target-url="/portfolio" 
  authentication-failure-url="/login?error=1"
  username-parameter="name" password-parameter="password"/>
  <logout logout-success-url="/login" logout-url="/logout" /> <!-- określamy przekierowanie po wylogowaniu -->
 <csrf disabled="true"/><!-- for now disabling, it needs POST logout -->
  <!--  <csrf /> --><!--   włączamy zabezpieczenie przed csrf -->
</http> 

<authentication-manager>
  <authentication-provider>
    <jdbc-user-service 
	    data-source-ref="dataSource" 
	    users-by-username-query="SELECT name, password,enabled FROM users3 WHERE name=?" 
	    authorities-by-username-query="SELECT name, 'ROLE_USER' FROM users3 WHERE name=?" 
	/>
  </authentication-provider>
</authentication-manager>
    
